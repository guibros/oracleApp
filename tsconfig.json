{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest"]
  },
  "include": [
    "src",
    "App.tsx",
    "index.ts",
    "index.js",
    "jest.setup.js",
    "jest.config.js"
  ]
}
